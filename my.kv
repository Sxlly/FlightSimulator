<Button>
    font_size: 24
    background_normal: ''
    background_color: (0,100/255.0,150/255.0,0.8)
    size_hint: (None, None)
    pos_hint: {'center_x': 0.5}
    width: 300
    height: 50

<TextInput>
    pos_hint: {'center_x': 0.5}
    size_hint: (None, None)
    width: 150
    height: 50
    halign: "center"

<Popup>
    size_hint: (None, None)
    size: (400, 250)
    font_size: 18
    bold: True

<Label>
    font_size: 30
    bold: True
    italic: True


<Intro_Screen>
    name: "intro"

    num_aircrafts: num_aircrafts
    filename: filename

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Image:
            source: 'Flight-Simulator-Logo.png'


        Label:
            text: "Number Of Aircraft"
            color: (0,100/255.0,150/255.0,0.8)
        
        TextInput:
            multiline: False
            id: num_aircrafts
        
        Label:
            text: "Height File Name"
            color: (0,100/255.0,150/255.0,0.8)
        
        TextInput:
            multiline: False
            id: filename

        Button:
            text: "Enter"
            on_press: root.intro_enter()
        
        Button:
            text: "Clear"

<Main_Screen>
    name: "main"

    aircraft_name: aircraft_name
    aircraft_speed: aircraft_speed
    aircraft_alt: aircraft_alt
    aircraft_pos: aircraft_pos
    aircraft_dir: aircraft_dir

    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        padding: 5

        Image:
            source: 'Flight-Simulator-Logo.png'

        Label:
            text: "Aircraft Name"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 1.45}
        
        TextInput:
            multiline: False
            id: aircraft_name
            pos_hint: {'x': 0.1, "top": 0.9}
        
        Label:
            text: "Aircraft Speed"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 1.25}
        
        TextInput:
            multiline: False
            id: aircraft_speed
            pos_hint: {'x': 0.1, "top": 0.7}

        Label:
            text: "Aircraft Altitude"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 1.05}
        
        TextInput:
            multiline: False
            id: aircraft_alt
            pos_hint: {'x': 0.1, "top": 0.5}
    
        Label:
            text: "Aircraft Position"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 0.85}
        
        TextInput:
            multiline: False
            id: aircraft_pos
            pos_hint: {'x': 0.1, "top": 0.3}

        Label:
            text: "Aircraft Direction"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 0.65}
        
        TextInput:
            multiline: False
            id: aircraft_dir
            pos_hint: {'x': 0.1, "top": 0.1}
        

        Button:
            text: "Enter"
            background_normal: ''
            background_color: (0,50/255.0,30/255.0,0.75)
            pos_hint: {'x': 0.40, "top": 0.40}


