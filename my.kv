<Button>
    font_size: 20
    background_normal: ''
    background_color: (181/255.0,128/255.0,98/255.0,0.8)
    size_hint: (None, None)
    pos_hint: {'center_x': 0.5}
    width: 250
    height: 35

<TextInput>
    pos_hint: {'center_x': 0.5}
    size_hint: (None, None)
    width: 200
    height: 50
    halign: "center"

<Popup>
    size_hint: (None, None)
    size: (400, 250)
    font_size: 18
    bold: True

<Label>
    font_size: 30
    bold: True
    italic: True
    color: (232/255.0, 211/255.0, 179/255.0, 1)


<Intro_Screen>
    name: "intro"

    num_aircrafts: num_aircrafts
    filename: filename
    nav_main: nav_main
    nav_plot: nav_plot

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        spacing: 5

        Image:
            source: 'Flight-Simulator-Logo.png'


        Label:
            text: "Number Of Aircraft"
        
        TextInput:
            multiline: False
            id: num_aircrafts
        
        Label:
            text: "Height File Name"
        
        TextInput:
            multiline: False
            id: filename

        Button:
            text: "Enter"
            on_press: root.intro_enter()
        
        Button:
            text: "Clear"
        
        Button:
            id: nav_main
            text: "To Main Screen"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            on_press: root.navto_main()
        
        Button:
            id: nav_plot
            text: "To Plot Screen"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            on_press: root.navto_plot()

<Main_Screen>
    name: "main"

    aircraft_name: aircraft_name
    aircraft_speed: aircraft_speed
    aircraft_alt: aircraft_alt
    aircraft_x: aircraft_x
    aircraft_y: aircraft_y
    aircraft_dir: aircraft_dir
    aircraft_entered_label: aircraft_entered_label
    nav_plot: nav_plot
    nav_intro: nav_intro

    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        padding: 5

        Image:
            source: 'Flight-Simulator-Logo.png'

        Label:
            text: "Aircraft Name"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 1.45}
        
        TextInput:
            multiline: False
            id: aircraft_name
            pos_hint: {'x': 0.1, "top": 0.9}
        
        Label:
            text: "Aircraft Speed"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 1.25}
        
        TextInput:
            multiline: False
            id: aircraft_speed
            pos_hint: {'x': 0.1, "top": 0.7}

        Label:
            text: "Aircraft Altitude"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 1.05}
        
        TextInput:
            multiline: False
            id: aircraft_alt
            pos_hint: {'x': 0.1, "top": 0.5}
    
        Label:
            text: "Aircraft X Coordinate"
            font_size: 20
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.42, "top": 0.85}
        
        TextInput:
            multiline: False
            id: aircraft_x
            pos_hint: {'x': 0.05, "top": 0.3}
            size_hint: (None, None)
            width: 100
            height: 50
        
        Label:
            text: "Aircraft Y Coordinate"
            font_size: 20
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.25, "top": 0.85}
        
        TextInput:
            multiline: False
            id: aircraft_y
            pos_hint: {'x': 0.2, "top": 0.3}
            size_hint: (None, None)
            width: 100
            height: 50

        Label:
            text: "Aircraft Direction"
            color: (0,100/255.0,150/255.0,0.8)
            pos_hint: {'x': -0.34, "top": 0.65}
        
        TextInput:
            multiline: False
            id: aircraft_dir
            pos_hint: {'x': 0.1, "top": 0.1}
        
        Label:
            id: aircraft_entered_label
            text: "No Aircraft Entered"
            pos_hint: {'x': 0, "top": 0.75}

        Button:
            text: "Enter"
            background_normal: ''
            background_color: (0,50/255.0,30/255.0,0.75)
            pos_hint: {'x': 0.40, "top": 0.40}
            on_press: root.main_enter()
        
        Button:
            id: nav_intro
            text: "To Intro Screen"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            pos_hint: {'x': 0.40, "top": 0.85}
            on_press: root.navto_intro()
        
        Button:
            id: nav_plot
            text: "To Plot Screen"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            pos_hint: {'x': 0.40, "top": 0.80}
            on_press: root.navto_plot()

<Plot_Screen>
    name: "plot"

    validate_button: validate_button
    flight_hours: flight_hours
    flight_hours_label: flight_hours_label
    plot_button: plot_button
    nav_main: nav_main
    nav_intro: nav_intro

    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        padding: 5

        Label:
            id: flight_hours_label
            text: "Hours Of Flight"
            pos_hint: {'x': 0, "top": 1.45}

        TextInput:
            id: flight_hours
            multiline: False
            pos_hint: {'x': 0.45, "top": 0.90}


        Button:
            id: validate_button
            text: "Validate Terrain"
            background_normal: ''
            background_color: (179/255.0,38/255.0,16/255.0,0.75)
            pos_hint: {'x': 0.15, "top": 0.95}
            on_press: root.validate_terrain()
        
        Button:
            id: plot_button
            text: "Run Simulator"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            pos_hint: {'x': 0.65, "top": 0.95}
            on_press: root.run_plot()
        
        Button:
            id: nav_intro
            text: "To Intro Screen"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            pos_hint: {'x': 0.40, "top": 0.65}
            on_press: root.navto_intro()
        
        Button:
            id: nav_main
            text: "To Main Screen"
            background_normal: ''
            background_color: (17/255.0,168/255.0,40/255.0,0.75)
            pos_hint: {'x': 0.40, "top": 0.45}
            on_press: root.navto_main()






