<Button>
    font_size: 24
    background_normal: ''
    background_color: (0,100/255.0,150/255.0,0.8)
    size_hint: (None, None)
    pos_hint: {'center_x': 0.5}
    width: 300
    height: 50

<TextInput>
    pos_hint: {'center_x': 0.5}
    size_hint: (None, None)
    width: 150
    height: 50

<Label>
    font_size: 30
    bold: True
    italic: True


<MyLayout>

    num_aircrafts: num_aircrafts
    filename: filename

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10


        Label:
            text: "Number Of Aircraft"
            color: (0,100/255.0,150/255.0,0.8)
        
        TextInput:
            multiline: False
            id: num_aircrafts
        
        Label:
            text: "Height File Name"
            color: (0,100/255.0,150/255.0,0.8)
        
        TextInput:
            multiline: False
            id: filename

        Button:
            text: "Enter"
            on_press: root.press()
        
        Button:
            text: "Clear"

