<MyGrid>:

    n_aircrafts: n_aircrafts



    GridLayout:
        cols: 1
        size: root.width - 200, root.height - 200
        pos: 100, 100

        GridLayout:
            cols: 2

            Label: 
                text: "Flight Simulator"
            
            TextInput: 
                multiline: False
            
            Label:
                text: "Number Of Aircrafts: "
            
            TextInput:
                id: n_aircrafts
                multiline: False
        
        Button:
            text: "Enter"
            on_press: root.n_aircrafts_button()